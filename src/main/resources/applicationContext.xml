<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">

    <bean id="testBean" class="kok.spring21.TestBean">
        <constructor-arg value="Koko"></constructor-arg>
    </bean>

    <bean id="beanPlayer" class="kok.spring21.BeanPlayer"  scope="prototype">
        <constructor-arg ref="testBean"></constructor-arg>
    </bean>

    <bean id="Book" class="kok.spring21.models.Book"  scope="prototype">
        <constructor-arg ref="author"></constructor-arg>
        <constructor-arg ref="name"></constructor-arg>
    </bean>

    <bean id="BookRepositoryInMemory" class="kok.spring21.repo.BookRepositoryInMemory"  scope="singleton">
    </bean>

</beans>